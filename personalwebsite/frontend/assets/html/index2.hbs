{% load render_bundle from webpack_loader %}
<!doctype html>
<html class="no-js" lang="en" dir="ltr">
    <head>
        <title>Title for Site</title>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Foundation for Sites</title>
        {% render_bundle 'main' %}
    </head>
    <body>

        <div class="header">
            <div class="hero valign-wrapper center-align">
                <div class="container">
                    <div class="row">
                        <h1 class="title-text center-align white-text">Title Text</h1>
                    </div>
                    <div class="row">
                        <a class="waves-effect waves-light btn-large z-depth-2" href="">Button Text</a>
                        <a class="waves-effect waves-light btn-large white grey-text z-depth-2" href="">Button Text</a>
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="divider"></div>
            <div class="row">
                <div class="col s12 center">
                    <h2>
                        Get the results that result
                    </h2>
                </div>
                <div class="col s12 center">
                    <p class="flow-text">
                        Put a tagline or something here?
                    </p>
                </div>
            </div>
            <div class="vspace"></div>
            <div class="row">
                <div class="col s12 m4">
                    <div class="card z-depth-2">
                        <div class="card-image">
                            <img  src="http://placehold.it/400x400.jpg" alt="showcase alt 1">
                            <span class="card-title">Title Text</span>
                        </div>
                        <div class="card-content">
                            <p class="flow-text">
                                The description for this card
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="card z-depth-2">
                        <div class="card-image">
                            <img src="http://placehold.it/400x400.jpg" alt="showcase alt 2">
                            <span class="card-title">Title Text</span>
                        </div>
                        <div class="card-content">
                            <p class="flow-text">
                                The description for this card
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col s12 m4">
                    <div class="card z-depth-2">
                        <div class="card-image">
                            <img src="http://placehold.it/400x400.jpg" alt="showcase alt 3">
                            <span class="card-title">Title Text</span>
                        </div>
                        <div class="card-content">
                            <p class="flow-text">
                                The description for this card
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="divider"></div>


            <div class="row">
                <div class="col s12">
                    <h3 class="center">Call to <span class="secondary-color">action</span> headline</h3>
                </div>
                <div class="col s12">
                    <h5 class="center"> Call to action <span class="primary-color">subtext</span> </h5>
                </div>
                <form>
                    <div class="col s12">
                        <div class="row">
                            <div class="col s12 m6 input-field">
                                <input id="name" class="validate" type="text" placeholder="Name" />
                                <label for="name">Name</label>
                            </div>
                            <div class="col s12 m6 input-field">
                                <input id="email" class="validate" type="email" placeholder="Email" />
                                <label for="email">Email</label>
                            </div>
                            <div class="col s12 input-field">
                                <textarea id="message" class="materialize-textarea validate" placeholder="Message"></textarea>
                                <label for="message">What do you think?</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 hide-on-small-only">
                            <button type="submit" class="hover btn-large waves-effect waves-light z-depth-2 btn-submit">
                                Submit
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                        <div class="col s12 center hide-on-med-and-up">
                            <button type="submit" class="btn-large waves-effect waves-light  center z-depth-2 btn-submit">
                                Submit
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <footer class="page-footer lighten-5">
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        footer text
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    <div class="s12">
                        Copyright text 
                    </div>
                </div>
            </div>
        </footer>




        <script src="static/jquery/jquery-3.1.0.min.js"></script>
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </body>
</html>

